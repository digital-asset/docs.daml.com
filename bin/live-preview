set -eou pipefail

DIR="$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"

$DIR/download

BUILD_DIR=$DIR/../workdir/build
rm -rf $BUILD_DIR
mkdir -p $BUILD_DIR

RELEASE_TAG=$(jq -r '.daml' $DIR/../LATEST)
CANTON_RELEASE_TAG=$(jq -r '.canton' $DIR/../LATEST)
DOWNLOAD_DIR=$DIR/../workdir/downloads


mkdir -p $BUILD_DIR/gen

$DIR/setup-sphinx-source-tree

DATE=$(date +"%Y-%m-%d")
echo { \"$DATE\" : \"$DATE\" } >  $BUILD_DIR/gen/versions.json

cd $DIR/..
pipenv install
pipenv run sphinx-autobuild -c $BUILD_DIR/source/configs/html $BUILD_DIR/source/source $BUILD_DIR/gen
